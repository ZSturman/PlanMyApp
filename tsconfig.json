{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react",
      "outDir": "./dist/esm", 
      "lib": ["dom", "es5", "es6", "esnext", "es2015"],
      "types": ["node"],
      "module": "ESNext",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "allowJs": true,
      "strict": true,
      "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
